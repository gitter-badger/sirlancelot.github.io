layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

<title>Matthew Pietz</title>
<link href="http://matpie.com/atom.xml" rel="self"/>
<link href="http://matpie.com/"/>
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>http://matpie.com/</id>
<author>
	<name>Matthew Pietz</name>
	<email>sirlancelot@gmail.com</email>
</author>

{% for post in site.posts %}
<entry>
	<title>{{ post.title }}</title>
	<link href="http://matpie.com{{ post.url }}/"/>
	<updated>{{ post.date | date_to_xmlschema }}</updated>
	<id>http://matpie.com{{ post.id }}/</id>
	<content type="html">{{ post.content | xml_escape }}
		{{ '<p style="padding:5px;background:#ddd;border:1px solid #ccc;clear:both;">This post originally appeared on <a href="http://matpie.com/">matpie.com</a>. You may not copy any portion of this content without direct permission from the author.</p>' | xml_escape }}
	</content>
</entry>
{% endfor %}

</feed>
